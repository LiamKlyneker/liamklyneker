@import '~@styles-variables'

div
  position relative
  padding-left 1.5rem
  &:before
    position absolute
    content ''
    height 6px
    width 6px
    background-color $grey_text
    left 0
    top 18px
h3
  font-size 24px
  font-weight 600
  color $grey_text
  margin 0
  letter-spacing 3px
  line-height 40px

p
  font-size 14px
  margin 0
  color $black_text_light

@media all and (min-width 768px)
  div
    &:before
      height 8px
      width 8px
      top 16px
  h3
    font-size 36px
  p
    font-size 18px