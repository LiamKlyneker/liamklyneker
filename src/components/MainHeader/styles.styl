@import '~@styles-variables'

header.active
  display block
  & > div
    max-width $max_width
    margin-left auto
    margin-right auto
    padding 2rem 3rem
    justify-content space-between
    display flex
  p
    margin 0
header.inactive
  display none

.hamburguer-icon
  height 30px
  width 40px
  position relative
  z-index 1001
  display flex
  flex-direction column
  align-items center
  justify-content center
  span
    display block
    height 3px
    width 100%
    background-color $black_text
    margin-bottom 10px
    transition .4s all ease-in
  span:last-child
    margin-bottom 0
.hamburguer-icon.active
  span:first-child
    transform rotate(-135deg)
    margin-bottom 0
  span:last-child
    transform rotate(135deg)

.navigation
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background-color rgba(white, .9)
  z-index 1000
  display flex
  flex-direction column
  align-items center
  justify-content center
  display none
  a
    font-weight 700
    text-decoration none
    color $black_text
    font-size 2rem
    margin-bottom 2rem
    position relative
    span
      position relative
      z-index 2
  a:before
    content ''
    position absolute
    width 30px
    height 7px
    left -10px
    bottom -1px
    background-color $main_color
    z-index 1
    opacity 0
    transition .3s all ease-out
  a.router-link-exact-active:before
    opacity 1
    left -7px
  a:hover
    color $main_color
.navigation.active
  display flex
  animation showMobileMenu .3s
@media all and (min-width 768px)
  .hamburguer-icon
    display none
  .navigation
    display flex
    position initial
    flex-direction row
    width auto
    a
      margin-bottom 0
      margin-right 5rem
      font-size 1rem

@media all and (min-width 1024px)
  header.active
    & > div
      padding 5rem 3rem
  .navigation
    a
      margin-right 5rem
@media all and (min-width 1200px)
  .navigation
    margin-right 10rem

@keyframes showMobileMenu
  from
    opacity 0
    transform scale(1.2)
  to
    opacity 1
    transform scale(1)
