@import '~@styles-variables'

.project-header
  & > div
    max-width $max_width
    margin-left auto
    margin-right auto
  & > div > div
    padding 2rem 1rem
  a
    font-size 1.2rem
    color white
    text-decoration none
    transition .3s all linear
  a:hover
    color rgba(white, .7)
    margin-left -4px
  figure
    display flex
    justify-content center
    height 200px
    img
      width 50%
      margin-bottom 4rem
  
.main-detail-wrapper
  padding 1rem
  padding-bottom 0
.detail-wrapper
  background-color white
  max-width 1400px
  margin-left auto
  margin-right auto
  box-shadow 0 0 24px 4px rgba(black, .2)
  & > div
    padding 3rem 2rem
    max-width $max_width
    margin-left auto
    margin-right auto
  .work-details-footer
    padding-top 5rem
    padding-bottom 5rem
    display flex
    justify-content center
    a
      font-size 18px
      color $black_text
      text-decoration none
      i
        transition .3s all linear
    a:hover
      color $main_color
      i
        margin-right .5rem
.work-detail
  margin-bottom 3rem
.work-details-wrapper
  margin-bottom 4rem

.item-description
  margin-bottom 1rem
  p
    margin 0
  p:first-child
    font-size 12px
    color $grey_text
    width 80px
    position relative
    top -2px
    font-weight 600
    letter-spacing 1px
    margin-bottom 14px
  p:last-child
    font-weight 400
    line-height 28px
.item-description--inline
  display flex
  align-items flex-end
  p:first-child
    margin-bottom 0

h2
  font-size 30px
  font-family 'Roboto Slab', sans-serif
  margin 0
  margin-bottom 3rem
h3
  margin-bottom 3rem

.work-details-slides
  img
    width 100%
    margin-bottom -3px

@media all and (min-width 768px)
  .detail-wrapper
    & > div
      padding 5rem
@media all and (min-width 1024px)
  h2
    font-size 48px
  h3
    margin-bottom 4rem
  .project-header
    a
      font-size 1.6rem
    figure
      height 540px
      img
        width auto
        margin-bottom 8rem
    & > div > div
      padding 2rem 0
  .main-detail-wrapper
    padding 2.5rem
    padding-bottom 0
  .work-details-wrapper
    display flex
    margin-bottom 6rem
  .work-detail
    flex 1
    padding-top 3.2rem
  .work-description
    flex 1
  .detail-wrapper
    & > div
      padding 8rem 5rem
      padding-bottom 0
    .work-details-footer
      padding-top 8rem
      padding-bottom 8rem
  .item-description
    margin-bottom 1.5rem
    p:first-child
      font-size 14px
      top 1px
    p:last-child
      line-height 36px

.main-detail-wrapper
  animation showMainBody .3s linear
@keyframes showMainBody
  from
    transform translateY(7px)
    opacity 0
  to
    transform translateY(0)
    opacity 1
