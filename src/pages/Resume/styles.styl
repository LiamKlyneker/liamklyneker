.p-disclaimer
  max-width 700px
  margin-bottom 3rem
  
.items-list
  margin-bottom 4rem
  & > div
    margin-bottom 2rem
h2
  margin-bottom 2rem

.skills-section-list
  & > div
    margin-bottom 3rem
@media all and (min-width 768px)
  .p-disclaimer
    margin-bottom 6rem
  .items-list
    margin-bottom 8rem
    & > div
      margin-bottom 4rem
  h2
    margin-bottom 5rem
  .skills-section-list
    display flex
    flex-wrap wrap
    & > div
      flex 1 calc(50% - 2rem)
      margin-right 2rem
      margin-bottom 5rem
    & > div:nth-child(even)
      margin-right 0
