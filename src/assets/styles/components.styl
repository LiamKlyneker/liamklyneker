.main-loader
	position fixed
	z-index 1000
	left 0
	top 0
	height 100vh
	width 100%
	background-color black
	display flex
	align-items center
	justify-content center
	figure
		max-width 80px
		display flex
		align-items flex-end
		img
			width 100%
			margin-right .5rem
		span
			display inline-block
			height 2px
			background-color white
			min-width 18px
			animation 'animateLogo' 1.8s linear infinite

@media all and (min-width 700px)
	.main-loader
		figure
			max-width 120px
			span
				min-width 27px

.main-loader.hide
	animation 'hideBack' .6s ease-out

.antennas
	display none
	position absolute
	top 100px
	right 30px
	article.svg:nth-child(2)
		margin-top 9rem
	article.svg:nth-child(3)
		margin-top 4rem
@media all and (min-width 1200px)
	.antennas
		display flex
article.svg
	margin-right 74px
	position relative
	.circle
		display block
		height 21px
		width 21px
		border-radius 50%
		background-color $purple
	.halo
		border 1px solid $purple
		height 43px
		width 43px
		border-radius 50%
		position absolute
		top -11px
		left -11px
	.line
		position absolute
		width 2px
		background-color $purple
		height 100vh
		left 9px
		&:after
			content ''
			position absolute
			width 4px
			height 4px
			border-radius 50%
			top 100%
			left -1px
			background-color $purple
