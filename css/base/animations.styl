@keyframes mobileMenu
	from
		opacity 0
		transform translateY(5px)
	to
		transform translateY(0)
		opacity 1

@keyframes showHeaderMenu
	from
		opacity 0
		transform translateY(5px)
	to
		transform translateY(0)
		opacity 1
@keyframes hideHeaderMenu
	from
		transform translateY(0)
		opacity 1
	to
		opacity 0
		transform translateY(5px)

@keyframes showPage
	from
		opacity 0
	to
		opacity 1
@keyframes hidePage
	from
		opacity 1
	to
		opacity 0
		
@keyframes lineMove
	0
		transform translateY(0)
	25%
		transform translateY(-20px)
	100%
		transform translateY(-10px)
		opacity 1
@keyframes lineMoveO
	0
		transform translateY(0)
	25%
		opacity 1
		transform translateY(20px)
	50%
		opacity 1
	75%
		opacity 0
	100%
		transform translateY(10px)
		opacity 1
